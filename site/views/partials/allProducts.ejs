<div class="container-fluid main">
    <div class="row justify-content-center mt-3 mb-3">
        <div class="col-md-3 col-lg-4 col-xl-3">
            <hr>
        </div>
        <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4 tittle">
            <p>Todos nuestros productos</p>
        </div>
        <div class="col-md-3 col-lg-4 col-xl-3">
            <hr>
        </div>
    </div>
    <div class="row justify-content-center">
        <% products.forEach(products => { %>
        <div class="col-8 col-sm-5 col-md-3 col-lg-3 col-xl-2 mr-3 ml-3 containerProduct">
            <div>
                <div class="image imgProduct">
                    <img class="card-img-top" src='/images/products/<%= products.image %>' alt="Card image cap">
                </div>
                <h4 class="text center" style="text-align: center;"><%= products.name %></h4>
                <div>
                    <% if (products.description.length > 100) { %>
                        <p class="text-center"><%= products.description.substring(0, 100)+ '...' %></p>
                    <% } else { %>                    
                        <p class="text-center"><%= products.description %></p>
                    <% } %>
                </div>
                <div class="row">
                    <div class="col-12 price text-align-center">
                        <p class="card-text">$ <%= products.price %></p>
                    </div>
                </div>
                <div class="row no-gutters">
                    <div class="col-10">
                        <a href=detalle/<%= products.id %> class="view"><img src="images/eye.png" alt=""></a>
                    </div>
                    <div class="col-2">
                        <a href="/cart/addToCart/<%= products.id %>" class="addToCart"><img src="images/cart.png" alt=""></a>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>