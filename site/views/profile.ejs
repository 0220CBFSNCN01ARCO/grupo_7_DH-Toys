<DOCTYPE html>
<html lang="en">
<%- include('partials/head')%>
<body>
  <div id="app">
    <%- include('partials/header')%>
    <div class="container-fluid mt-4 mb-4">
        <div class="row">
            <!-- Column -->
            <div class="col-lg-4 col-xlg-3 col-md-5">
                <div class="card">
                    <div class="card-block mt-3 mb-3">
                        <center class="m-t-30"> <img src="/images/users/<%- user[0].avatar %>" class="img-circle" width="150">
                            <h4 class="card-title m-t-10"><%- user[0].name%> <%- user[0].lastName %></h4>
                            <h6 class="card-subtitle">Usuario frecuente</h6>
                        </center>
                    </div>
                </div>
            </div>
            <!-- Column -->
            <!-- Column -->
            <div class="col-lg-8 col-xlg-9 col-md-7">
                <div class="card">
                    <div class="card-block mt-3">
                        <form action="/users/profile/<%= user[0].id %>?_method=PUT" method="POST" class="form-horizontal form-material" enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="col-md-12"><b>Nombre</b></label>
                                <div class="col-md-12">
                                    <input type="text" placeholder="Ingrese Nombre" value="<%- user[0].name%>" class="form-control form-control-line" name="name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12"><b>Apellido</b></label>
                                <div class="col-md-12">
                                    <input type="text" placeholder="Ingrese Apellido" value="<%- user[0].lastName %>" class="form-control form-control-line" name="lastName">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="example-email" class="col-md-12"><b>Email</b></label>
                                <div class="col-md-12">
                                    <input type="email" disabled value="<%- user[0].email %>" class="form-control form-control-line" name="example-email" id="example-email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12"><b>Password</b></label>
                                <div class="col-md-12">
                                    <input type="password" value="password" class="form-control form-control-line">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12"><b>Número de teléfono</b></label>
                                <div class="col-md-12">
                                    <input type="text" placeholder="Ingrese numero de teléfono" value="<%= user.phoneNumber%>" class="form-control form-control-line" name="phoneNumber">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-12">Seleccionar Pais</label>
                                <div class="col-sm-12">
                                    <select class="form-control form-control-line" name="country" required>
                                        <option disabled selected>Seleccione País</option>
                                        <option value="Argentina">Argentina</option>
                                        <option value="Brasil">Brasil</option>
                                        <option value="USA">Usa</option>
                                        <option value="Chile">Chile</option>
                                        <option value="Colombia">Colombia</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Avatar</label>
                                <div class="col-md-12">
                                    <input type="file" name="avatar" class="form-control form-control-line" name="avatar" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <button class="btn btn-warning" type="submite">Actualizar Perfil</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Column -->
        </div>
    </div>

<%- include('partials/scripts')%>
</div>
<%- include('partials/footer')%>
</body>
</html>