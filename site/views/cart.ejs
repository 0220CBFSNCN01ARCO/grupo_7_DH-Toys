<!DOCTYPE html>
<html>
<%- include('partials/head')%>
<body>
    <div id="app">
        <%- include('partials/cartModal')%>
        <%- include('partials/header')%>
        <section class="content-page">
            <div class="container mb-80">
                <div class="row">
                    <div class="col-sm-12">
                        <article class="post-8">
                            <form action="/cart/updateCart" method="POST" class="cart-form"  style="box-shadow: 4px 4px 5px 0px rgba(171,169,171,0.29);
                                                                            background-color: white;
                                                                            border-radius: 25px;">
                                <div class="cart-product-table-wrap responsive-table"
                                    style="background-color: white; border-radius: 15px; border: 1px solid lightgrey;">
                                    <table>
                                        <thead>
                                            <tr>
                                                <th class="product-remove"></th>
                                                <th class="product-thumbnail"></th>
                                                <th class="product-name">Producto</th>
                                                <th class="product-price">Precio</th>
                                                <th class="product-quantity">Cantidad</th>
                                                <th class="product-subtotal">Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% cart.cartItems.forEach(item => { %>
                                            <tr>
                                                <td class="product-remove">
                                                    <a href="/cart/removeItem/<%= item.id %>" title="Borrar <%= item.name %>"><img class="imgDeleteItem" src="/images/close-icon-black.png" alt="Borrar <%= item.name %>"></a>
                                                </td>
                                                <td class="product-thumbnail">
                                                    <a>
                                                        <img src="/images/products/<%= item.image %>" alt=""></a>
                                                </td>
                                                <td class="product-name ">
                                                    <a><%= item.name %> </a>
                                                </td>
                                                <td class="product-price">
                                                    <span class="product-price-amount amount" id="priceItem"><span
                                                            class="currency-sign">$</span><%= item.price %> </span>
                                                </td>
                                                <td>
                                                    <div class="d-flex">
                                                        <span style="padding: 5px;"><img src="/images/minus.png"
                                                                id="minus" style="width: 20px;" alt="minus"></span>
                                                        <input id="count" class="text-center" min="1" max="100" type="text" readonly name="<%= item.id %>" value="<%= item.cantidad %>" style="width: 50px; border: 0px;" >
                                                        <span style="padding: 5px;"><img src="/images/plus.png"
                                                                id="plus" style="width: 20px;" alt="plus"></span>
                                                </td>
                                                <td class="product-subtotal">
                                                    <span class="product-price-sub_totle amount" id="subTotal"><span
                                                            class="currency-sign">$</span><%= item.subtotal %></span>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="row cart-actions">
                                    <div class="col-12 d-flex justify-content-center mb-3">
                                        <button type="submit" class="btn btn-md btn-warning">Actualizar</button>
                                    </div>
                                </div>
                            </form>
                            <div class="cart-collateral">
                                <div class="cart_totals">
                                    <h3>Total del Carrito</h3>
                                    <div class="responsive-table">
                                        <table>
                                            <tbody>
                                                <tr class="cart-subtotal">
                                                    <th>Subtotal</th>
                                                    <td><span class="product-price-amount amount"><span
                                                                class="currency-sign">$</span><%= cart.total %></span></td>
                                                </tr>
                                                <tr class="shipping">
                                                    <th>Envio</th>
                                                    <td>
                                                        <ul id="shipping_method">
                                                            <li>
                                                                <input name="shipping_method[0]" data-index="0"
                                                                    id="shipping_method_0_legacy_free_shipping"
                                                                    value="legacy_free_shipping" class="shipping_method"
                                                                    type="radio">
                                                                <label
                                                                    for="shipping_method_0_legacy_free_shipping">Envio
                                                                    Gratis</label>
                                                            </li>
                                                            <li>
                                                                <input name="shipping_method[0]" data-index="0"
                                                                    id="shipping_method_0_legacy_local_delivery"
                                                                    value="legacy_local_delivery"
                                                                    class="shipping_method" type="radio">
                                                                <label
                                                                    for="shipping_method_0_legacy_local_delivery">Local
                                                                    Delivery</label>
                                                            </li>
                                                        </ul>
                                                        <form>
                                                            <p>
                                                                <a href="#">Calcular Envio</a>
                                                            </p>
                                                        </form>
                                                    </td>
                                                </tr>
                                                <tr class="order-total">
                                                    <th>Total</th>
                                                    <td><span class="product-price-amount amount"><span
                                                                class="currency-sign">$</span><%= cart.total %> </span></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="product-proceed-to-checkout">
                                        <a class="btn btn-lg btn-warning form-full-width" href="">Comprar</a>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>
                </div>
            </div>
        </section>
        <%- include('partials/footer')%>
    </div>
    <%- include('partials/scripts')%>
</body>
</html>